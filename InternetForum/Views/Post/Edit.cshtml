@model InternetForum.Models.EditPostViewModel
@{
	ViewData["Title"] = "Edit";
}
<h2> Upravit příspěvek </h2>

@using (@Html.BeginForm("Edit", "Post"))
{
	<div class="form-group">
		@Html.LabelFor(m => m.Title)
		@Html.TextBoxFor(m => m.Title, new { @class = "form-control" })
	</div>

	<div class="form-group">
		@Html.LabelFor(m => m.Body)
		@Html.TextAreaFor(m => m.Body, new { @class = "form-control" })
	</div>

	<button type="submit" class="btn btn-primary">Uložit změny</button>
}

<div>
	@foreach (var comment in Model.Comments)
	{
		<div class="row">
			<div class="col-sm-1">
				<div class="thumbnail">
					<img class="img-responsive user-photo" src="@comment.Author.AvatarURL">
				</div><!-- /thumbnail -->
			</div><!-- /col-sm-1 -->
			<div class="col-sm-5">
				<div class="panel panel-default">
					<div class="panel-heading">
						<strong>@comment.Author.UserName</strong> <span class="text-muted">@comment.CreatedAt</span>
					</div>
					<div class="panel-body">
						@comment.Body
					</div><!-- /panel-body -->
				</div><!-- /panel panel-default -->
			</div><!-- /col-sm-5 -->
		</div>
	}
</div>