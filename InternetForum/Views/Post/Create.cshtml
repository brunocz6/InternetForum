@model InternetForum.Models.CreatePostViewModel
@{
	ViewData["Title"] = "Create";
}
<h2> Vytvořit nový příspěvek </h2>

@using (@Html.BeginForm("Create", "Post"))
{
	<div class="form-group">
		@Html.LabelFor(m => m.Title)
		@Html.TextBoxFor(m => m.Title, new { @class = "form-control" })
	</div>

	<div class="form-group">
		@Html.LabelFor(m => m.Body)
		@Html.TextAreaFor(m => m.Body, new { @class = "form-control" })
	</div>

	<button type="submit" class="btn btn-primary">Přidat příspěvek</button>
}