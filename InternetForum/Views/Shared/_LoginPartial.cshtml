@using Microsoft.AspNetCore.Identity
@using InternetForum.Models
@using InternetForum.DL.Entities

	@inject SignInManager<User> SignInManager
	@inject UserManager<User> UserManager

	@if (SignInManager.IsSignedIn(User))
	{
		using (Html.BeginForm("Logout", "Account", FormMethod.Post, new { @class = "navbar-right" }))
		{
			<ul class="nav navbar-nav navbar-right">
				<li>
					@Html.ActionLink(@UserManager.GetUserName(User), "Index", "Manage", null, new { @class = "nav-link" })
				</li>
				<li>
					<button type="submit" class="btn btn-link navbar-btn navbar-link nav-item">Odhlasit se</button>
				</li>
			</ul>
		}
	}
	else
	{
		<ul class="nav navbar-nav navbar-right">
			<li class="nav-item">
				@Html.ActionLink("Zaregistrovat se", "Register", "Account", null, new { @class = "nav-link" })
			</li>
			<li class="nav-item">
				@Html.ActionLink("Pøihlásit se", "Login", "Account", null, new { @class = "nav-link" })
			</li>
		</ul>
	}